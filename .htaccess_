

################################################################################
#   httpsからの通信でwww有りの場合、www無しにリダイレクト                              #
################################################################################
RewriteEngine On
RewriteCond %{HTTP_HOST} ^www\.(.*) [NC]
RewriteRule ^(.*)$ https://%1%{REQUEST_URI} [R=301,L]

################################################################################
#   index.phpを表示しない                              #
################################################################################
RewriteEngine on
RewriteCond %{THE_REQUEST} ^.*/index.php
RewriteRule ^(.*)index.php$ https://taikiabe.com/$1 [R=301,L]

################################################################################
#   index.htmlを表示しない                              #
################################################################################
RewriteEngine on
RewriteCond %{THE_REQUEST} ^.*/index.html
RewriteRule ^(.*)index.html$ https://taikiabe.com/$1 [R=301,L]